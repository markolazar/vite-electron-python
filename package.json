{
  "name": "vite-electron-python",
  "version": "1.0.0",
  "description": "vite-electron-python",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "init": "uv venv && npm install && npm run create-env",
    "create-env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.writeFileSync('.env', 'VITE_BACKEND_PORT=49152\\nVITE_FRONTEND_PORT=49153'); }\"",
    "dev:backend": "cd src/backend && uv run main.py",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "concurrently \"npm run dev:backend\" \"electron-vite dev\"",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:backend:win": ".\\.venv\\Scripts\\activate && cd src\\backend && pyinstaller main.py --add-data assets:assets --noconfirm --noconsole --clean --name vite-electron-python-backend",
    "build:backend:mac": "source .venv/bin/activate && cd src/backend && pyinstaller main.py --add-data assets:assets --noconfirm --noconsole --clean --name vite-electron-python-backend",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build:backend:win && npm run build && electron-builder --win",
    "build:mac": "npm run build:backend:mac && electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  },
  "build": {
    "extraResources": [
      {
        "from": "src/backend/dist/vite-electron-python-backend",
        "to": "vite-electron-python-backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
